<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn_delete" data-id="{{image.partFileName}}">
            <i class="fas fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{image.fullFileName}}" class="img-fluid" alt="">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btnLike" data-id="{{image.fullFileName}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p>
            <i class="fas fa-clock"></i> {{timeAgo image.savedDate}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btnToggleComment">
            <i class="fas fa-comment-o"></i> Post a Comment
        </button>
    </div>
    <div class="card-body">
        <blockquote>
            <form action="/images/{{image.partFileName}}/comment" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="comment">Your Comment</label>
                    <textarea name="comment" rows="2" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btnComment" type="submit">
                        <i class="fas fa-comment-o"></i> Publishing
                    </button>
                </div>
            </form>
        </blockquote>
    </div>
</div>